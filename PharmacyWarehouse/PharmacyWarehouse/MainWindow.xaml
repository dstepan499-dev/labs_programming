<Window x:Class="PharmacyWarehouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyWarehouse"
        mc:Ignorable="d"
        Title="Аптечный склад - Справочник лекарств" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Medicines}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Срок годности" Binding="{Binding ExpiryDate, StringFormat='dd.MM.yyyy'}" Width="120"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding ManufacturerInfo}" Width="200"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding CurrentStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

